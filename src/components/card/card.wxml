<view class="card" hover-class="card-hover">
    <view class="card__hd" style="position: relative;margin-right: 10px;">
        <image src="{{avatarUrl}}" class="avatar"/>
        <view class="badge" style="position: absolute;top: -.4em;right: -.4em;" wx:if="{{badge}}">{{badge}}</view>
    </view>
    <view class="card__bd">
        <view style="font-size: 18px;">{{nickName}}</view>
    </view>
    <view class="card__ft">
        <view style="font-size: 13px;color: #888888;">{{extra}}</view>
    </view>
</view>
